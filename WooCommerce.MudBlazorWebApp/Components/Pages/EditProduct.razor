@page "/editproduct/{ProductId}"
@using WooCommerce.MudBlazorWebApp.Services
@using WooCommerceAPI.Models.Services.Foundations.Products
@using System.ComponentModel.DataAnnotations
@inject WooCommerceService WooService
@inject CacheService CacheService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

@if (product == null)
{
    <MudProgressCircular Color="Color.Default" Indeterminate="true" />
}
else
{
    <MudGrid>
        <MudItem xs="12" sm="7">
            <MudPaper Class="pa-4">
                <MudForm @ref="form">
                    <MudTextField T="string" @bind-Value="product.Name" Label="Name" />
                    <MudTextField T="string" @bind-Value="product.RegularPrice" Label="Price" />
                    <MudTextField T="string" @bind-Value="product.Sku" Label="Sku" />
                    <MudTextField T="string" @bind-Value="product.Status" Label="Status" />
                    <MudTextField T="int?" @bind-Value="product.StockQuantity" Label="Stock Quantity" />
                </MudForm>
            </MudPaper>
            <MudPaper Class="pa-4 mt-4">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true" OnClick="@SubmitEdits">Submit</MudButton>
            </MudPaper>

            <MudContainer Class="pa-4 mt-4">
            @if (successCode == 0)
            {
                <MudText Color="Color.Success">Success</MudText>
            }
            else if (successCode == 1)
            {
                <MudText Color="@Color.Error">
                    Try again
                </MudText>
            }
            else if (successCode == 2)
            {
                <MudProgressCircular Color="Color.Default" Indeterminate="true" />
            }
            </MudContainer>
        </MudItem>
    </MudGrid>
}

@code {
    [Parameter]
    public string ProductId { get; set; }
    int successCode = -1;
    string[] errors = { };
    MudTextField<string> pwField1;
    MudForm form;
    private Product product;

    protected override async Task OnInitializedAsync()
    {
        if (CacheService.ColdSingle())
        {
            product = await WooService.GetProductAsync(int.Parse(ProductId));
            CacheService.SetCurrentProduct(product);
        }
        else
        {
            product = CacheService.GetCurrentProduct();
        }
    }

    private async Task SubmitEdits()
    {
        try
        {
            successCode = 2;
            StateHasChanged();
            CacheService.SetCurrentProduct(product);
            product.ManageStock = true;
            await WooService.UpdateProductAsync(product);
            successCode = 0;
        }
        catch (Exception e)
        {
            successCode = 1;
        }
        StateHasChanged();
    }
}
