@inherits LayoutComponentBase
@using WooCommerce.MudBlazorWebApp.Components

<MyMudThemeProvider />
<MyMudProviders />

<MudLayout>
    <MudDrawerContainer Class="mud-height-full">
        <MudDrawer @bind-Open="@open" Fixed="false" Elevation="1" Variant="@DrawerVariant.Mini" OpenMiniOnHover="false">
            <MudNavMenu>
                <MudNavLink Href="products" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.CardGiftcard">Products</MudNavLink>
                <MudNavLink Href="products" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Store">Stores</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.LibraryBooks">Library</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Group">Community</MudNavLink>
                <MudNavLink OnClick="@ToggleDrawer" Icon="@Icons.Material.Filled.ArrowCircleLeft">Collapse menu</MudNavLink>
            </MudNavMenu>
        </MudDrawer>
    </MudDrawerContainer>
    <MudMainContent>
        <MudContainer Style="max-width: 1440px;" Class="my-8 pt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    bool open = true;

    void ToggleDrawer()
    {
        open = !open;
    }
 }